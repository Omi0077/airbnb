<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-pink-100 via-yellow-100 to-red-100 min-h-screen">

    <%- include('../partials/nav') %>
    <div class="flex flex-col items-center justify-center min-h-[80vh] px-4">
        <header class="mb-8">
            <h1 class="text-[#FF385C] text-3xl font-bold tracking-tight drop-shadow">Log-In to your account</h1>
        </header>

        <main class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
            <form action="/login" method="post" class="flex flex-col gap-6">
                <%- include('../partials/errors')%>
                <input 
                    type="email" 
                    name="email" 
                    value="<%= oldInput.email %>"
                    placeholder="Your email"
                    class="border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#FF385C] text-gray-700 placeholder-gray-400"
                    required
                >

                <input 
                    type="password" 
                    name="password" 
                    placeholder="Your password"
                    class="border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[#FF385C] text-gray-700 placeholder-gray-400"
                    required
                >

                <input 
                    type="submit" 
                    value="Log-In" 
                    class="bg-[#FF385C] hover:bg-[#ff385dab] text-white font-bold py-3 px-4 rounded-lg cursor-pointer transition duration-200 shadow"
                >
            </form>
        </main>
    </div>