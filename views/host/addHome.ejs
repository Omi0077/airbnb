<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen">

    <%- include('../partials/nav') %>

    <div class="flex flex-col items-center justify-center min-h-[80vh] px-4">
        <header class="mb-8">
            <h1 class="text-[#FF385C] text-3xl font-semibold">Register your home</h1>
        </header>

        <main class="bg-white shadow-md rounded-lg p-6 w-full max-w-md">
            <form action="/host/add-home" method="post" class="flex flex-col gap-4">
                <input 
                    type="text" 
                    name="houseName" 
                    placeholder="Enter home name"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <input 
                    type="text" 
                    name="location" 
                    placeholder="Enter home location"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <input 
                    type="text" 
                    name="price" 
                    placeholder="Enter home price"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <input 
                    type="text" 
                    name="rating" 
                    placeholder="Enter home Rating"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <input 
                    type="text" 
                    name="imageURL" 
                    placeholder="Enter home Image URL"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <textarea 
                    name="description" 
                    placeholder="Enter home description"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                ></textarea>

                <input 
                    type="submit" 
                    value="submit" 
                    class="bg-[#FF385C] hover:bg-[#ff385dab] text-white font-semibold py-2 px-4 rounded cursor-pointer transition"
                >
            </form>
        </main>
    </div>

</body>
</html>
