<%- include('../partials/head') %>
    </head>

    <body class="bg-gray-100 min-h-screen">

        <%- include('../partials/nav') %>
            <div class="flex flex-col items-center justify-center min-h-[80vh] px-4">
                <header class="mb-8">
                    <h1 class="text-[#FF385C] text-3xl font-semibold">Create a new account</h1>
                </header>

                <main class="bg-white shadow-md rounded-lg p-6 w-full max-w-md">
                    <form action="/signup" method="post" class="flex flex-col gap-4 max-w-md mx-auto">
                        <%- include('../partials/errors')%>
                                <!-- First Name -->
                                <input type="text" name="firstName" placeholder="First Name"
                                    value="<%= oldInput.firstName %>"
                                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                                    required>

                                <!-- Last Name -->
                                <input type="text" name="lastName" placeholder="Last Name"
                                    value="<%= oldInput.lastName %>"
                                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]">

                                <!-- Email -->
                                <input type="email" name="email" placeholder="Email address"
                                    value="<%= oldInput.email %>"
                                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                                    required>

                                <!-- Password -->
                                <input type="password" name="password" placeholder="Password"
                                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                                    required>

                                <!-- Confirm Password -->
                                <input type="password" name="confirmPassword" placeholder="Confirm Password"
                                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                                    required>

                                <!-- User Type -->
                                <select name="userType" value="<%= oldInput.userType %>"
                                    class="border border-gray-300 rounded px-4 py-2 bg-white focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                                    required>
                                    <option value="" disabled selected>Select user type</option>
                                    <option value="guest">Guest</option>
                                    <option value="host">Host</option>
                                </select>

                                <!-- Terms and Conditions -->
                                <label class="flex items-start gap-2 text-sm text-gray-600">
                                    <input type="checkbox" name="terms" required class="mt-1 accent-[#FF385C]">
                                    I agree to the <a href="/terms" class="text-[#FF385C] hover:underline">Terms and
                                        Conditions</a>
                                </label>

                                <!-- Submit -->
                                <input type="submit" value="Sign Up"
                                    class="bg-[#FF385C] hover:bg-[#ff385dab] text-white font-semibold py-2 px-4 rounded cursor-pointer transition">
                    </form>

                </main>
            </div>
    </body>