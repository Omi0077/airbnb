<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 min-h-screen">

        <%- include('../partials/nav', {user: user}) %>

    <div class="flex flex-col items-center justify-center min-h-[80vh] px-4">
        <header class="mb-8">
            <h1 class="text-[#FF385C] text-3xl font-semibold">Edit your home</h1>
        </header>

        <main class="bg-white shadow-md rounded-lg p-6 w-full max-w-md">
            <form action="/host/edit-home" method="post" class="flex flex-col gap-4">
                <input type="hidden" name="_id" value="<%= home._id %>">
                <input 
                    type="text" 
                    name="houseName" 
                    value="<%= home.houseName %>"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <input 
                    type="text" 
                    name="location" 
                    value="<%= home.location %>"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <input 
                    type="text" 
                    name="price" 
                    value="<%= home.price %>"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <input 
                    type="text" 
                    name="rating" 
                    value="<%= home.rating %>"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <input 
                    type="text" 
                    name="imageURL" 
                    value="<%= home.imageURL %>"
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                >

                <textarea 
                    name="description" 
                    class="border border-gray-300 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#FF385C]"
                ><%= home.description %></textarea>

                <input 
                    type="submit" 
                    value="submit" 
                    class="bg-[#FF385C] hover:bg-[#ff385dab] text-white font-semibold py-2 px-4 rounded cursor-pointer transition"
                >
            </form>
        </main>
    </div>

</body>
</html>
